<h2>Resultados da busca: <%= search %></h2>

<% if (events && events.length > 0) { %>
  <ul>
    <% events.forEach(event => { %>
      <li>
        <strong><%= event.name %></strong><br>
        Data: <%= event.date %><br>
        Local: <%= event.location_name || event.location_id %><br>
        <hr>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <p>Nenhum evento encontrado.</p>
<% } %>
