<h2>Resultados da busca por: <%= search %></h2>

<% if (events && events.length > 0) { %>
  <% events.forEach(event => { %>
    <a href="/api/events/event/<%= event.id %>" style="text-decoration: none; color: inherit;">
      <div style="border: 1px solid #000; padding: 10px; margin-bottom: 10px;">
        <img 
          src="<%= event.photo || '/default.jpg' %>" 
          alt="Imagem de <%= event.title %>" 
          width="150" 
          height="100"
          style="display: block; margin-bottom: 5px;"
        />
        <h4><%= event.title %></h4>
        <p><%= event.description || 'Sem descrição disponível.' %></p>
      </div>
    </a>
  <% }) %>
<% } else { %>
  <p>Nenhum evento encontrado.</p>
<% } %>
