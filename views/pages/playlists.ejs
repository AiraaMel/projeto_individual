<div>
    <img src="/images/logo-vibra.png" alt="Logo Vibra">
</div>

<h2>Playlists</h2>
<p>Lista de Playlists:</p>

<table border="1" id="playlistsTable">
  <thead>
    <tr>
      <th>Locations_id</th>
      <th>Name</th>
      <th>Link</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td colspan="3">Carregando Playlists...</td>
    </tr>
  </tbody>
</table>

<script>
  // Função para buscar playlists da API e renderizar na tabela
  async function fetchPlaylists() {
    try {
      const response = await fetch('/playlists');
      if (!response.ok) {
        throw new Error('Erro ao buscar playlists');
      }
      const playlists = await response.json();

      const tableBody = document.querySelector('#playlistsTable tbody');
      tableBody.innerHTML = ''; // Limpa o conteúdo anterior

      if (playlists.length > 0) {
        playlists.forEach(playlist => {
          const row = document.createElement('tr');
          row.innerHTML = `
            <td>${playlist.id}</td>
            <td>${playlist.name}</td>
            <td>${playlist.link}</td>
          `;
          tableBody.appendChild(row);
        });
      } else {
        tableBody.innerHTML = '<tr><td colspan="3">Nenhuma playlist encontrada.</td></tr>';
      }
    } catch (error) {
      console.error(error);
      const tableBody = document.querySelector('#playlistsTable tbody');
      tableBody.innerHTML = '<tr><td colspan="3">Erro ao carregar playlists.</td></tr>';
    }
  }

  // Chama a função ao carregar a página
  fetchPlaylists();
</script>