<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/profile.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <title>Vibra - Perfil</title>
</head>

<body>
  <div class="container">
    <!-- Header com Logo -->
    <header class="header">
      <img src="/images/logo-vibra.png" alt="Logo Vibra" class="logo">
    </header>

    <!-- Meus eventos -->
    <section class="events-section">
      <h2 class="section-title">Meus eventos</h2>
      <div id="events-container" class="events-container"></div> <!-- container dos cards -->
    </section> <!-- FECHAMENTO CORRETO -->

    <!-- Meus dados -->
    <section class="profile-section">
      <h2 class="section-title">Meus dados</h2>
      <form class="profile-form">
        <div class="input-group">
          <input id="input-name" type="text" placeholder="Nome" class="form-input" disabled>
        </div>
        <div class="input-group">
          <input id="input-email" type="email" placeholder="E-mail" class="form-input" disabled>
        </div>
        <div class="input-group">
          <input type="password" placeholder="Senha" class="form-input" disabled>
        </div>
        <button type="submit" class="button-primary" disabled>Confirmar</button>
      </form>
    </section>

    <% if (pageTitle !== 'Login') { %>
      <%- include('../partials/navbar') %>
    <% } %>
  </div>

  <script src="/script/profileScript.js"></script>
</body>

</html>
